<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="remindme.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:remindme.Helpers"
    xmlns:local="clr-namespace:remindme"
    Shell.FlyoutBehavior="Disabled">

    <TabBar >
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate local:Views.AllNotesPage}"
            Icon="{x:Static helpers:IconFont.HomeVariantOutline}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Icon="{x:Static helpers:IconFont.InformationOffOutline}" />
    </TabBar>

</Shell>
